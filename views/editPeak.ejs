<h1><%=foundPeak.peak%></h1>

<form action="/user/<%= foundPeak._id %>?_method=PUT" method="POST">
    <h2>Edit Peak</h2>

    <label for="bagged">Bagged?:</label>
    <select name = 'bagged'>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <label for="hike-date">Date:</label>
    <input type="date" id="hike-date" name="hike-date" value="">

    <label for="start">Start Time:</label>
    <input type="time" name="start" id="start" value="<%=foundPeak.start%>">

    <label for="summited">Summited Time:</label>
    <input type="time" name="summited" id="summited" value="<%=foundPeak.summited%>">

    <label for="end">End Time:</label>
    <input type="time" name="end" id="end" value="<%=foundPeak.end%>">

    <label for="notes">Hike Notes:</label>
    <textarea id="notes" name="notes" rows="4" cols="50">
        <%=foundPeak.notes%>
        </textarea>

    <input class="button" type="submit" value="Save Changes" href="/user"></label>
    
</form>